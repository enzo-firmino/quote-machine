{% extends 'base.html.twig' %}

{% block title %}Catégorie "{{ category.name }}"{% endblock %}

{% block body %}
    <h1>Catégorie "{{ category.name }}"</h1>

    <ul class="list-unstyled">
        {% for quote in category.quotes %}
            <li>
                {{ include('quote/_quote.html.twig', {quote: quote}) }}
            </li>
        {% endfor %}
    </ul>

    <div class="d-flex">
        {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-secondary mr-2">
            Modifier la catégorie
        </a>
        {{ include('category/_delete_form.html.twig') }}
        {% endif %}
    </div>
{% endblock %}